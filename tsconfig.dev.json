{
  "compilerOptions": {
    "importHelpers": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6", "ESNext", "ES2015"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "./",
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./src/infrastructure/services/PiezoElectricSensorService.ts"
  ]
}
